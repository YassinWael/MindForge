{
  "display_override": [
    "window-controls-overlay"
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/newEmail?to=%s"
    }
  ],
  "name": "MindForge",
  "short_name": "MindForge",
  "start_url": "/home",
  "display": "standalone",
  "description": "MindForge is a web application designed to enhance productivity by displaying motivational messages with a typewriter effect in full-screen mode. It helps users maintain focus by temporarily locking keyboard and mouse interactions.",
  "lang": "en",
  "dir": "auto",
  "theme_color": "#000000",
  "background_color": "#000000",
  "orientation": "any",
  "icons": [
    {
      "src": "manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "manifest-icon-192.maskable.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "manifest-icon-512.maskable.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "https://www.pwabuilder.com/assets/screenshots/screen1.png",
      "sizes": "2880x1800",
      "type": "image/png",
      "description": "A screenshot of the home page"
    }
  ],
  "related_applications": [
    {
      "platform": "windows",
      "url": "https://example.com/mindforge-app"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "Start Focus Mode",
      "url": "/",
      "description": "Enter full-screen focus mode with motivational messages."
    },
    {
      "name": "Get New Messages",
      "url": "/",
      "description": "Fetch new motivational content from the server."
    }
  ]
}